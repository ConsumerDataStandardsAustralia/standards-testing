{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug HTML Generator",
            "args": ["gendocs", "html", "${workspaceFolder}/working/output-files/full-test-suite.json", "${workspaceFolder}/docs/index.html"],
            "program": "${workspaceFolder}/tools/testdocs-cli/src/cli.ts",
            "preLaunchTask": "tsc: build - ${workspaceFolder}/tools/testdocs-cli/tsconfig.json",
            "outFiles": ["${workspaceFolder}/tools/testdocs-cli/dist/**/*.js"]
          },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\tools\\create-json-test-files\\app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}